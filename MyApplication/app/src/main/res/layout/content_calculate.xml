<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android">

    <Chronometer
        android:id="@+id/content_calculate_chronometer"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:background="@drawable/shape_chronometer"
        android:gravity="center"
        android:textColor="#0000ff"
        android:textSize="25sp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/content_calculate_start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="开始" />

        <Button
            android:id="@+id/content_calculate_pause"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="暂停"
            android:visibility="gone" />

        <Button
            android:id="@+id/content_calculate_stop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="终止"
            android:visibility="gone" />
    </LinearLayout>
</merge>